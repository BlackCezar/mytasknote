<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>myTaskNote|Главная</title>
  <link rel="shortcut icon" href="../public/assets/favicon.ico" type="image/x-icon">
  <link rel="stylesheet" type="text/css" href="../public/assets/css/main.css" />
  <link rel="stylesheet" href="../public/assets/css/fontawesome-all.min.css">
</head>
<body>
    <%- include('elements/loader') %>
  <div class="main">
    <div class="main__overlay"></div>
    <div class="main__header"><%= include('elements/header') %></div>
    <div class="main__content">
      <div class="left__block">
        <div class="left__block__content">

        </div>
      </div>
      <div class="right__block">
        <div class="right__block__content">
          <h2 class="right__block__header">Быстрый старт</h2>
            <form action="/" method="post" class="main__form">
              <div class="input__block">
                <label class="label" for="email">Username:</label>
                  <input type="email" id="email" name="email" value="" class="input__text" />
              </div>
              <div class="input__block">
                  <label class="label" for="password">Password:</label>
                    <input type="password" id="password" name="password" value="" class="input__text"/>
                </div>
                <button type="submit" class="btn">Войти</button>
            </form>
            <div class="right__block__links">
              <a href="/stub" class="right__block__link">Забыли пароль?</a>
              <a href="/auth/reg" class="right__block__link">Регистрация</a>
            </div>
            <div class="arrow__down"><i class="fa fa-angle-double-down"></i><br></div>
            <div class="right__block__text">Скроль вниз..</div>
        </div>
      </div>
     </div>
  </div>
  
  <script src="../public/assets/js/main.js"></script>
</body>
</html>
